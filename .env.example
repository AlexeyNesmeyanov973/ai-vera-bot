TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here
ADMIN_USER_IDS=123456789
PRO_USER_IDS=987654321

# === Whisper ===
WHISPER_BACKEND=faster      # "faster" или "openai"
WHISPER_MODEL=small         # "small", "medium", "large-v3", ...
WHISPER_LANGUAGE=auto       # ru / en / auto

# === YooKassa ===
YOOKASSA_SHOP_ID=your_yookassa_shop_id
YOOKASSA_SECRET_KEY=your_yookassa_secret_key
YOOKASSA_RETURN_URL=https://t.me/your_bot
YOOKASSA_PRO_AMOUNT=299.0

# === Prodamus (если YooKassa не задан) ===
PRODAMUS_WEBHOOK_SECRET=your_prodamus_webhook_secret
PRODAMUS_PAYMENT_LINK=https://payform.prodamus.ru/your-page
PRODAMUS_PRO_AMOUNT=299.0

# === Тарифы / доп.минуты ===
# Стоимость сверхлимитных минут (руб/минута), также используется для кнопок докупки
OVERAGE_PRICE_RUB=2.0

# === Лимиты ===
FREE_USER_DAILY_LIMIT_MINUTES=30
PRO_USER_DAILY_LIMIT_MINUTES=180

# Максимальный размер файла, присланного через Telegram (МБ)
MAX_FILE_SIZE_MB=20

# Максимальный размер при скачивании по ссылке (МБ)
# (под это заложена потоковая загрузка и докачка в downloaders.py)
URL_MAX_FILE_SIZE_MB=2000

# === Потоковая загрузка (для ссылок) — опционально ===
# Папка для временных файлов
TMP_DIR=downloads
# Размер чанка, МБ
STREAM_CHUNK_MB=4
# Таймаут сетевого запроса, сек
STREAM_TIMEOUT_S=45
# Разрешить докачку, если сервер поддерживает Range
RESUME_DOWNLOADS=1
# Для YouTube тянуть только аудио (быстрее и меньше)
YTDLP_AUDIO_ONLY=1

# === Хранилища (опционально) ===
